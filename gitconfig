[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process required = true
[core]
    # Prevent less from paging output if it would fit
    pager = less -FRX
    excludesFile = ~/.gitignore
[pull]
    # use `git pull --rebase` or `git pull --no-ff` to override:
    ff = only
[alias]
    d = diff
    dc = diff --cached
    st = status
    br = branch
    brs = branch --sort=-committerdate
    sw = switch
    re = restore
    res = restore --staged
    rew = rewstore --worktree
    resw = restore --staged --worktree
    co = commit -v
    coa = commit -v --amend
    pom = pull origin main
    poh = push origin HEAD
    pfoh = push --force origin HEAD
    git = !exec git  # https://caiustheory.com/git-git-git-git-git/
[color]
    diff = auto
    status = always
    branch = auto
    interactive = auto
    ui = true
    pager = true
[pager]
    status = true
[init]
    defaultBranch = main
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[checkout]
    defaultRemote = origin
[commit]
    verbose = true
[core] 
    packedGitLimit = 512m 
